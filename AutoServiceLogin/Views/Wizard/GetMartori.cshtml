@model IEnumerable<AutoServiceLogin.MartoriBord>
@{
    ViewBag.Title = "GetMartori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Alege Martorii</h2>

<h3>Producator: @ViewBag.Producator</h3>
<h3>Model: @ViewBag.Model</h3>
<h3>Model: @ViewBag.Motorizare</h3>
<h3>Model: @ViewBag.An</h3>

<div class="martori-holder choose">
    @using (Html.BeginForm("Finish", "Wizard"))
    {
        <input type="hidden" name="p" value="@Html.AttributeEncode(ViewBag.p)" />
        <input type="hidden" name="m" value="@Html.AttributeEncode(ViewBag.m)" />
        <input type="hidden" name="mot" value="@Html.AttributeEncode(ViewBag.mot)" />
        foreach (var item in Model)
        {
            <div>
                <label>
                    <input type="checkbox" name="martorSelectat" value="@Html.AttributeEncode(item.MartorID)" style="display:none" />
                    @{
                        string imgSrc = item.MartorID + ".gif";
                    }
                    <img src="~/Content/images/martori/@Html.AttributeEncode(imgSrc)" />

                    <span>
                        @Html.DisplayFor(labelItem => item.Nume)
                    </span>
                </label>

            </div>

        }

        <button type="submit" style="margin-top:8em;margin-left:30em;" class="btn btn-primary">Continua</button>
    }
</div>
